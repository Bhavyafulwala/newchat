<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51000000"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@drawable/back"
        android:orientation="horizontal"
        android:id="@+id/headingbar">

        <TextView
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:text="B H A V Y A"
            android:textSize="60dp"
            android:textColor="@color/black"
            android:padding="15dp"
            android:layout_marginStart="10dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/logout"
            android:defaultFocusHighlightEnabled="true"
            android:layout_gravity="center"
            android:background="#FA1212"
            android:src="@drawable/baseline_exit_to_app_24"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_below="@id/headingbar"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="515dp"
            android:layout_below="@id/headingbar"
            android:id="@+id/mainuserrecyclerview"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="50dp"
                android:src="@drawable/cameratwo"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/baseline_chat_24"
                android:layout_marginStart="50dp"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/baseline_app_settings_alt_24"
                android:layout_marginStart="50dp"/>
        </LinearLayout>

    </LinearLayout>






</RelativeLayout>